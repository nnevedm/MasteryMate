<div class="container chatroom"
  data-controller="chatroom-subscription"
  data-chatroom-subscription-request-id-value="<%= @request.id %>"
  >
  <h1>#<%= @request.title %></h1>

  <div class="messages" data-chatroom-subscription-target="messages">
    <% @request.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>
</div>

<%= simple_form_for [@request, @message], html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "d-flex"} do |f| %>
  <%= f.input :content,
    label: false,
    placeholder: "Message ##{@request.title}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
