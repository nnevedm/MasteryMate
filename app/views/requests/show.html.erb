<div class="requests-overview">
  <%# TO BE REPLACED WITH NICO'S PARTIAL %>
  <div class="container-fluid my-request">
    <div class="pending-requests">
      <h2>Pending Requests</h2>

      <div>
        <% @requests.each do |request| %>
          <%= link_to request.title, request_path(request) %>
        <% end %>
      </div>

    </div>
  </div>

  <div class="container-fluid request-steps-container">
    <div class="request-steps-box" data-controller="steps">

      <div class="steps-buttons">
        <button class="step-button active-step" data-action="click->steps#display1" data-steps-target="button1">My request</button>
        <button class="step-button" data-action="click->steps#display2" data-steps-target="button2">Chat</button>
        <button class="step-button" data-action="click->steps#display3" data-steps-target="button3">Offer</button>
        <button class="step-button" data-action="click->steps#display4" data-steps-target="button4">Contact details</button>
      </div>


      <div data-steps-target="render1"><%= render "1request", request: @request %></div>
      <div class="d-none" data-steps-target="render2"><%= render "2chat", request: @request %></div>
      <div class="d-none" data-steps-target="render3"><%= render "3offer", request: @request %></div>
      <div class="d-none" data-steps-target="render4"><%= render "4contact", request: @request %></div>
    </div>
  </div>
</div>
